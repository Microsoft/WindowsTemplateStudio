<UserControl
    x:Class="ItemNamespace.View.MasterDetailDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <Thickness x:Key="ContainerMargin">24,0</Thickness>

        <Thickness x:Key="LargeTopMargin">0,16,0,0</Thickness>
        <Thickness x:Key="MediumTopMargin">0,8,0,0</Thickness>
        <Thickness x:Key="SmallTopMargin">0,4,0,0</Thickness>
    </UserControl.Resources>

    <StackPanel Margin="{StaticResource ContainerMargin}">
        <TextBlock Text="{x:Bind Item.Title, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" />
        <TextBlock Text="{x:Bind Item.Category, Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}" />
        <TextBlock Text="{x:Bind Item.Subtitle, Mode=OneWay}" Style="{StaticResource SubtitleTextBlockStyle}" Margin="{StaticResource MediumTopMargin}" />
        <TextBlock Text="{x:Bind Item.Description, Mode=OneWay}" Style="{StaticResource BodyTextBlockStyle}" Margin="{StaticResource SmallTopMargin}"  />
    </StackPanel>
</UserControl>
